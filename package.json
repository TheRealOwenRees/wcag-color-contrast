{
  "name": "wcag-color-contrast",
  "version": "0.0.3",
  "description": "WCAG color contrast compliancy checker",
  "author": "Owen Rees <owenrees@tutanota.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/TheRealOwenRees/wcag-color-contrast"
  },
  "license": "MIT",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "default": "./dist/index.mjs"
    }
  },
  "files": [
    "./dist/index.mjs",
    "README.md"
  ],
  "keywords": [
    "rescript",
    "wcag",
    "color",
    "contrast",
    "accessibility",
    "wcag3"
  ],
  "engines": {
    "node": ">=22",
    "pnpm": ">=9"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "res:build": "rescript",
    "res:clean": "rescript clean",
    "res:dev": "rescript watch",
    "bundle": "esbuild src/WcagColorContrast.res.mjs --bundle --minify --format=esm --platform=node --target=node22 --outfile=dist/index.mjs",
    "build": "pnpm run res:clean && pnpm run res:build && pnpm run bundle"
  },
  "devDependencies": {
    "@rescript/runtime": "^12.1.0",
    "@vitest/coverage-v8": "4.0.18",
    "esbuild": "^0.27.2",
    "rescript": "^12.1.0",
    "vitest": "^4.0.18"
  }
}
